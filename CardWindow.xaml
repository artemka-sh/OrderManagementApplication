<Window x:Class="OrderManagementApplication.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карточка заявки" Height="400" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ФИО:"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Почта:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:"/>
            <TextBox x:Name="DescriptionTextBox" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

            <TextBlock Text="Тип неисправности:"/>
            <TextBox x:Name="FaultTypeTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Модель:"/>
            <TextBox x:Name="ModelTextBox" Margin="0,0,0,10"/>

            <Button Content="Готово" Click="DoneButton_Click" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
